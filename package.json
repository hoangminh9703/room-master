{
  "name": "hoteldesk",
  "version": "1.0.0",
  "description": "Hotel Management System - Desktop Application",
  "author": "HotelDesk Team",
  "license": "MIT",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "concurrently \"npm run ng:serve\" \"wait-on http://localhost:4200 && npm run electron-dev\"",
    "ng:serve": "ng serve",
    "ng:build": "ng build --configuration production",
    "ng:lint": "ng lint",
    "ng:test": "ng test",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-prod": "cross-env NODE_ENV=production electron .",
    "build": "npm run ng:build && npm run package",
    "package": "electron-builder --dir",
    "dist": "npm run ng:build && electron-builder",
    "dist:win": "npm run ng:build && electron-builder --win",
    "dist:mac": "npm run ng:build && electron-builder --mac",
    "dist:linux": "npm run ng:build && electron-builder --linux",
    "db:migrate": "node electron/database/migrate.js",
    "db:seed": "node electron/database/seed.js",
    "db:init": "npm run db:migrate && npm run db:seed",
    "lint": "ng lint && eslint electron/**/*.js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.html\" \"electron/**/*.js\""
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.5.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.0",
    "uuid": "^9.0.0",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.48.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "5.4.5",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.hoteldesk.app",
    "productName": "HotelDesk",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets/icons"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/icon.png"
    }
  }
}
